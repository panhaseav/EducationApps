                    android:text="Network related:1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/textView11"/>
            <TextView
                    android:text="What we offer: "
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/textView12"/>

            <TextView
                    android:text="Flexible and independent work,Guaranteed hourly payment,We take care of all administration and payment tasks,Access to a bespoke online learning platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/textView13"/>

            <TextView
                    android:text="Become a part of the Mila Service Partner community by registering online today!"
                    android:layout_width="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/textView14"/>

            <TextView
                    android:text="Salary: Â£25.00 /hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/textView15"/>

            <Button
            android:text="Apply"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"

            android:layout_height="wrap_content" android:id="@+id/button"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>